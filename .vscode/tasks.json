{
    "version": "2.0.0",
    "args": [],
    "tasks": [
        {
            "command": "dotnet",
            "taskName": "build",
            "args": [
                "${workspaceRoot}/pmc.csproj"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$msCompile"
        },
        {
            "command": "dotnet",
            "taskName": "watch",
            "args": [
                "watch",
                "run",
                "--urls",
                "http://*:5001"
            ],
            "isBackground": true,
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "new"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "command": "dotnet",
            "taskName": "publish",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "type": "shell",
            "args": [
                "publish",
                "${workspaceRoot}/pmc.csproj",
                "-r",
                "linux-arm",
                "-o",
                "\\\\pi3.lan\\dotnet\\pmc"
            ],
            "problemMatcher": []
        }
    ]
}